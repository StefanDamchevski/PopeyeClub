@model PopeyeClub.ViewModels.User.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
}

@section Styles{ 
    <link href="~/css/form.css" rel="stylesheet" />
}

<div class="form-wrap">
    <h2>ChangePassword</h2>
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="ChangePassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UserId"/>
                    <div class="form-group">
                        <input asp-for="OldPassword" class="form-control" placeholder="Old Password"/>
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="NewPassword" class="form-control" placeholder="New Password"/>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Confirm Password"/>
                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="go-to">
    <span>Go back to </span>
    <a asp-controller="User" asp-action="Profile" asp-route-userId="@Model.UserId">Profile</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
