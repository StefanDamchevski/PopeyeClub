@model PopeyeClub.ViewModels.User.SignUpViewModel

@{
    ViewData["Title"] = "Sign Up";
}

@inject IConfiguration configuration

@section Styles{
    <link href="~/css/form.css" rel="stylesheet" />
}

<div class="form-wrap">
    <h2>Sign Up</h2>
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="SignUp">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Email" class="form-control" placeholder="Enter your email here" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="UserName" class="form-control" placeholder="Enter your username here" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" class="form-control" placeholder="Enter your password here" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Repeat your password here" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="profilePicture" value="@configuration["DefaultProfilePicture"]" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Sign Up" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="go-to">
    <span>Have an account?</span>
    <a asp-controller="Auth" asp-action="Login">Log In</a>
</div>
