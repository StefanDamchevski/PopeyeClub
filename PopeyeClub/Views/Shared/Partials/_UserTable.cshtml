<div id="listOfUsers" class="modal" role="dialog" aria-labelledby="modalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close" aria-hidden="true"></button>
            <table class="table table-hover" id="modalLabel">
                <tbody>
                    @foreach (var item in Model)
                    {
                        if (Model.Count > 0)
                        {
                            <tr class="user-row" style="display:none;">
                                <td>
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.ProfilePicture)" />
                                </td>
                                <td>@item.UserName</td>
                                <td>
                                    <a asp-controller="User" asp-action="Profile" asp-route-userId="@item.Id" class="btn btn-primary btn-sm">View Profile</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <button id="closeBtn" data-dismiss="modal" style="display:none">Close</button>
        </div>
    </div>
</div>