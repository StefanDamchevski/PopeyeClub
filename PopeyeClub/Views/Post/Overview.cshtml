@model List<PopeyeClub.ViewModels.Post.OverviewViewModel>

@{
    ViewData["Title"] = "Home";
}

@section Styles{
    <link rel="stylesheet" href="~/css/postOverview.css"/>
}

<div class="container">
    @if (Model.Count == 0)
    {
        <div class="not-available">
            <p>No posts to show</p>
        </div>
    }

    @foreach (PopeyeClub.ViewModels.Post.OverviewViewModel post in Model)
    { 
        <div class="row">
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header">
                        <div class="post-user">
                            <img src="data:image/jpeg;base64,@post.ProfilePicture" />
                        </div>
                        <a asp-controller="User" asp-action="Profile" asp-route-userId="@post.UserId" class="text-dark hvr-underline-from-center">@post.UserName</a>
                        <div class="post-actions hvr-grow">
                            <i class="fas fa-ellipsis-h fa-2x hvr-icon-grow"></i>
                        </div>
                    </div>
                    <div class="card-body">
                        <img class="post-img" src="data:image/jpeg;base64,@post.PostImage" />
                        <div class="card-actions">
                            @if (post.LikeStatus == PopeyeClub.ViewModels.Like.Enums.PostLikeStatus.None)
                            {
                                <button class="btn hvr-pulse-grow" onclick="addLike(event,@post.PostId)">
                                    <i class="far fa-heart fa-2x hvr-icon-pulse-grow"></i>
                                </button>
                                <button class="btn hvr-pulse-grow hide" onclick="removeLike(event, @post.PostId)">
                                    <i class="fas fa-heart fa-2x hvr-icon-pulse-grow"></i>
                                </button>
                            }
                            else
                            {
                                <button class="btn hvr-pulse-grow hide" onclick="addLike(event,@post.PostId)">
                                    <i class="far fa-heart fa-2x hvr-icon-pulse-grow"></i>
                                </button>
                                <button class="btn hvr-pulse-grow" onclick="removeLike(event, @post.PostId)">
                                    <i class="fas fa-heart fa-2x hvr-icon-pulse-grow"></i>
                                </button>
                            }
                            <a class="hvr-pulse-grow">
                                <i class="far fa-comment-alt fa-2x hvr-icon-pulse-grow"></i>
                            </a>
                            <a class="hvr-pulse-grow">
                                <i class="far fa-share-square fa-2x hvr-icon-pulse-grow"></i>
                            </a>
                            <a class="hvr-pulse-grow">
                                <i class="far fa-bookmark fa-2x hvr-icon-pulse-grow"></i>
                            </a>
                        </div>
                        <div class="likes-count-section">
                            <span>Liked by <span>@post.PostLikes.Where(x => x.Status.Equals(true)).Count()</span> people</span>
                        </div>
                        <div class="comments-section">
                            <div class="view-comment-button">
                                <a class="text-primary hvr-underline-from-center">View All <span>@post.PostCommentsCount</span> Comments</a>
                            </div>
                            @if (post.PostComments.Count == 0)
                            {
                                <div class="not-available">
                                    <p>No comments on this post</p>
                                </div>
                            }
                            @for (int i = 0; i < post.PostComments.Count; i++)
                            {
                                <div class="comment">
                                    <div class="user-comment">
                                        <img src="data:image/jpeg;base64,@post.PostComments[i].UserImage" />
                                        <span>@post.PostComments[i].UserName</span>
                                    </div>
                                    <div class="comment-text">@post.PostComments[i].Text</div>
                                    <div class="comment-like">
                                        @if (post.PostComments[i].CommentLikeStatus == PopeyeClub.ViewModels.Like.Enums.CommentLikeStatus.None)
                                        {
                                            <button class="btn hvr-grow" onclick="addCommentLike(event,@post.PostComments[i].Id)">
                                                <i class="far fa-thumbs-up fa-2x hvr-icon-grow"></i>
                                            </button>
                                            <button class="btn hvr-grow hide" onclick="removeCommentLike(event,@post.PostComments[i].Id)">
                                                <i class="fas fa-thumbs-up fa-2x hvr-icon-grow"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn hvr-grow hide" onclick="addCommentLike(event,@post.PostComments[i].Id)">
                                                <i class="far fa-thumbs-up fa-2x hvr-icon-grow"></i>
                                            </button>
                                            <button class="btn hvr-grow" onclick="removeCommentLike(event,@post.PostComments[i].Id)">
                                                <i class="fas fa-thumbs-up fa-2x hvr-icon-grow"></i>
                                            </button>
                                        }
                                    </div>
                                </div>
                                <hr />
                            }
                        </div>
                        <div class="created-days-ago">
                            <p>@post.DaysAgo Days Ago</p>
                        </div>
                        <div class="card-footer">
                            <form asp-controller="PostComment" asp-action="Create" class="form-inline" method="post">
                                <input type="hidden" name="postId" value="@post.PostId" />
                                <div class="form-group comment-form">
                                    <input type="text" name="comment" class="comment-input" onkeyup="enablePostBtn(event)" placeholder="Write a comment..." required/>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Post" class="comment-submit btn btn-outline-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts{
    <script src="~/lib/axios/axios.min.js"></script> 
    <script src="~/js/postOverview.js"></script>
}